<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetielsActivity"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/dtitle"
        android:text="sssssssssss"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dtitle"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/dimage"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:layout_marginLeft="14dp"
        android:layout_below="@+id/dimage"
        android:id="@+id/ddiscription"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ddiscription"
        android:layout_centerHorizontal="true"
        android:id="@+id/des_isComplete"
        android:textSize="20sp"
        android:layout_margin="20dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dback"
        android:layout_below="@+id/des_isComplete"
        android:layout_centerHorizontal="true"
        android:text="back"
        android:textStyle="bold"
        android:textSize="22sp"
        />



</RelativeLayout>